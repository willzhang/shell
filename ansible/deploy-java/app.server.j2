[Unit]
Description=Manage Java service

[Service]
Type=simple
ExecStart=/bin/bash {{ app_dir }}/{{ app_name }}/bin/start.sh
ExecStop=/bin/kill -- $MAINPID
ExecReload=/bin/kill -s HUP $MAINPID
User={{ app_user }}
Restart=on-failure
RestartSec=10
TimeoutStopSec=5
KillMode=process

[Install]
WantedBy=multi-user.target
